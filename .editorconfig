# editorconfig.org

root = true

[*]
indent_style = space
indent_size = 8
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.txt]
indent_size = 2

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[*.html]
indent_size = 4

[*.json]
indent_size = 4

[*.yml]
indent_size = 4
